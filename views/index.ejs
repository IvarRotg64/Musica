<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Platform</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>HELLO! Welcome to Tri-Verse Music</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/features">Features</a>
            <!-- New Navigation Links -->
            <a href="/login">Login</a>
            <a href="/signup">Sign Up</a>
        </nav>
    </header>

    <main>
        <!-- Display Success Message -->
        <% if (successMessage) { %>
            <div class="alert alert-success">
                <%= successMessage %>
            </div>
        <% } %>

        <!-- Display Error Message -->
        <% if (errorMessage) { %>
            <div class="alert alert-danger">
                <%= errorMessage %>
            </div>
        <% } %>

        <!-- Main Section for Songs -->
        <section class="song-section">
            <h2>Stream Your Favorite Music Anytime, Anywhere!</h2>
            <h3>Available Songs</h3>

            <!-- Table to Display Songs -->
            <div class="song-table-container">
                <table class="song-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Artist</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% songs.forEach((song, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= song.title %></td>
                                <td><%= song.artist %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Call to Action Section -->
        <section class="cta-section">
            <h3>Join the Tri-Verse Community!</h3>
            <p>Sign up or log in to explore more features, create playlists, and connect with other music lovers.</p>
            <div class="auth-buttons">
                <a href="/login" class="button">Login</a>
                <a href="/signup" class="button">Sign Up</a>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 Music Platform. All rights reserved.</p>
    </footer>
</body>
</html>
